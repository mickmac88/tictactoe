doctype html
html(lang="en" ng-app="bewd.tictactoe.board")
  head
    include ./includes/bower_header.jade
    title All the games!
  body
    .container
      h1 All the games!
      ul
        each board in boards
          li
            a(href="/games/#{board.id}") Game ##{board.id}
      if errors
        p.text-danger= errors.message
      form(name="newGame", action="/games", method="post")
        div.form-group
          label New Board Config
          input.form-control(type="text" name="board")
        button.btn.btn-default(type="submit") Create!
